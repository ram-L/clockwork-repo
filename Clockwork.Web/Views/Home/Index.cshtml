@model IEnumerable<Clockwork.Web.Models.TimeZoneModel>
@{
    ViewBag.Title = "Home";
}

<div class="row">
    <div class="card col-md-12 col-lg-12">
        <div class="card-body col-md-12 col-lg-12">
            <div class="row">
                @Html.DropDownList("listTimeZone", new SelectList(Model, "Id", "DisplayName"), new { @class = "form-control clockwork-control dropdown" })
                <button type="submit" class="btn btn-dark form-control clockwork-control" onclick="UserAction()"><i class="fa fa-clock-o"></i> Get the time</button>
            </div>
        </div>
    </div>
</div>
<div class="row blank-space"></div>
<h2>History</h2>
<div class="row">
    <div class="card col-md-12 col-lg-12">        
        <div class="card-body">
            <div class="row">
                <table id="currentTimeTable" class="table table-responsive-sm text-center w-100">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Time</th>
                            <th>Client IP</th>
                            <th>UTC Time</th>
                            <th>Time Zone</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="currentTimeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h6 id="modalHeader"></h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center font-weight-bold" id="modalBody">

            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/application/home/index.js" type="text/javascript"></script>
}
